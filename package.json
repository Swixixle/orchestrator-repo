{
  "name": "halo-orchestrator",
  "version": "1.0.0",
  "description": "Cross-system integration harness: HALO receipt generation + ELI tagging + semantic validation",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "RUN_E2E=1 vitest run --reporter=verbose",
    "demo": "tsx src/cli/run.ts",
    "verify": "tsx src/cli/verify.ts",
    "ingest-valet": "tsx src/cli/ingestValet.ts",
    "samples:generate": "node scripts/generate-evidence-inspector-samples.mjs",
    "ui:dev": "vite",
    "ui:build": "vite build",
    "ui:build:server": "tsc -p tsconfig.server.json",
    "ui:serve": "node dist/server/uiServer.js",
    "ui:prod": "npm run ui:build && npm run ui:build:server && npm run ui:serve",
    "ui:smoke": "npm run ui:build && npm run ui:build:server && node scripts/ui-smoke.mjs",
    "ui:preview": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Swixixle/orchestrator-repo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Swixixle/orchestrator-repo/issues"
  },
  "homepage": "https://github.com/Swixixle/orchestrator-repo#readme",
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/node": "^25.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vitest": "^4.0.18"
  }
}
