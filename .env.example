# Set to 1 to enable the live E2E test (requires a real LLM provider key)
RUN_E2E=0

# LLM provider key (required only when RUN_E2E=1)
OPENAI_API_KEY=
# or ANTHROPIC_API_KEY= / GEMINI_API_KEY= depending on your provider
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Optional provider routing hints (currently OpenAI adapter is implemented in code)
LLM_PROVIDER=openai
LLM_BASE_URL=

# Valet receipt HMAC key (required for ingest-valet bridge)
VALET_RECEIPT_HMAC_KEY=

# HALO checkpoint signing key (Ed25519 private key PEM) for ingest-valet / halo-receipts
RECEIPT_SIGNING_KEY=

# HALO checkpoint verify key (Ed25519 public key PEM); optional when derivable
RECEIPT_VERIFY_KEY=

# Optional ledger submission settings for ingest-valet
HALO_LEDGER_URL=
HALO_INGEST_ENDPOINT=/api/receipts/ingest
HALO_API_TOKEN=

# Legacy signing key (honoured for backward compatibility)
HALO_SIGNING_KEY=

# OpenAI endpoint path (default: /chat/completions)
# Set to /responses to use the Responses API instead.
E2E_ENDPOINT=/chat/completions

# OpenAI model to use in E2E test (default: gpt-4.1-mini)
E2E_MODEL=gpt-4.1-mini
